@model PagedList.IPagedList<ThotMVC.Models.Profesores>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Profesores", FormMethod.Get))
{
    <p>
        <div class="form-group">
            <div class="col-md-6">
                <label class="control-label">Nombre</label>
                <div class="input-group mb-md">
                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                    <span class="input-group-btn">
                        <input class="btn btn-success" type="submit" value="Buscar" />
                    </span>
                </div>
            </div>
        </div>
    </p>
}
<table class="table table-bordered table-striped mb-none">
    <tr>
        <th>
            Código
        </th>
        <th>
            @Html.ActionLink("Apellidos y nombre", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Sedes", "Index", new { sortOrder = ViewBag.SedesSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreCompletoProfesor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sedes.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))




















